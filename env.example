# Database configuration
# Default: Uses Docker PostGIS container
DATABASE_URL=postgresql://cim_wizard_user:cim_wizard_password@localhost:5432/cim_wizard_integrated

# Alternative configurations (uncomment to use):
# Local PostgreSQL: postgresql://postgres:postgres@localhost:5432/cim_wizard_integrated
# Custom server: postgresql://username:password@host:port/database

# Application settings
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# API settings
API_V1_STR=/api
PROJECT_NAME=CIM Wizard Integrated
VERSION=2.0.0

# CORS settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Docker PostGIS configuration (recommended)
POSTGRES_SERVER=localhost
POSTGRES_USER=cim_wizard_user
POSTGRES_PASSWORD=cim_wizard_password
POSTGRES_DB=cim_wizard_integrated
POSTGRES_PORT=5432

# Local PostgreSQL fallback (commented)
# POSTGRES_SERVER=localhost
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=cim_wizard_integrated
# POSTGRES_PORT=5432

# Service configuration (now integrated, no external URLs needed)
CENSUS_SERVICE=integrated
RASTER_SERVICE=integrated

# Performance settings
POOL_SIZE=10
MAX_OVERFLOW=20
POOL_PRE_PING=True

# Cache settings (optional Redis)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# Worker settings
# WORKERS=4
# WORKER_CLASS=uvicorn.workers.UvicornWorker