# CIM Wizard Integrated - Development Environment Configuration
# This file contains settings optimized for local development

# ====================
# Database Configuration
# ====================
# Local PostGIS Docker container settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=cim_wizard_integrated
POSTGRES_USER=cim_wizard_user
POSTGRES_PASSWORD=cim_wizard_password

# Database URL
DATABASE_URL=postgresql://cim_wizard_user:cim_wizard_password@localhost:5433/cim_wizard_integrated

# ====================
# Application Settings
# ====================
# Enable debug mode for development
DEBUG=True

# Verbose logging for development
LOG_LEVEL=DEBUG

# Application host and port
HOST=0.0.0.0
PORT=8000

# Application metadata
PROJECT_NAME=CIM Wizard Integrated - Development
VERSION=2.0.0-dev
API_V1_STR=/api

# ====================
# Security Settings
# ====================
# Allow all origins in development
BACKEND_CORS_ORIGINS=["*"]

# Development secret key (NOT FOR PRODUCTION)
SECRET_KEY=dev-secret-key-only-for-development

# ====================
# Database Performance
# ====================
# Smaller pool for development
POOL_SIZE=5
MAX_OVERFLOW=10
POOL_PRE_PING=True
POOL_RECYCLE=3600

# ====================
# Docker Settings
# ====================
# Development container names
CONTAINER_PREFIX=cim_wizard_dev

# pgAdmin settings for development
PGADMIN_EMAIL=admin@cimwizard.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ====================
# Development Features
# ====================
# Auto-reload on code changes
RELOAD=True

# Show SQL queries in logs
SHOW_SQL_QUERIES=True

# Enable API documentation
DOCS_ENABLED=True

# ====================
# Optional Services
# ====================
# Redis cache (disabled in development)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# Single worker for development
WORKERS=1

# ====================
# External Services
# ====================
# Service configuration
CENSUS_SERVICE=integrated
RASTER_SERVICE=integrated

# ====================
# Development Tools
# ====================
# Enable profiling
PROFILING_ENABLED=False

# Enable SQL query analysis
EXPLAIN_QUERIES=False

# Test data settings
LOAD_SAMPLE_DATA=True
SAMPLE_DATA_SIZE=small